<UserControl x:Class="Plugin_ContourMaster.UI.ContourMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300"
             Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#444444" Padding="15,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🎯 轮廓提取" Foreground="White" FontSize="14" FontWeight="Bold"/>
                
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12">

                <GroupBox Header="1. 算法核心参数" Margin="0,0,0,10" Padding="8,10">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,12">
                            <TextBlock Text="像素精度等级:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PrecisionLevel}" DockPanel.Dock="Right" Foreground="#007ACC" FontWeight="Bold" Margin="5,0,0,0"/>
                            <Slider Minimum="1" Maximum="10" Value="{Binding PrecisionLevel}" 
                                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0,0,0"/>
                        </DockPanel>

                        <TextBlock Text="{Binding Threshold, StringFormat='识别阈值: {0:F0}'}" FontWeight="SemiBold"/>
                        <Slider Minimum="0" Maximum="255" Value="{Binding Threshold}" 
                                TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                        <TextBlock Text="* 数值越小对暗色线条越敏感" FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="2. 几何形态优化" Margin="0,0,0,10" Padding="8,10">
                    <StackPanel>
                        <TextBlock Text="{Binding SimplifyTolerance, StringFormat='补缝距离 (CAD单位): {0:F2}'}" FontWeight="SemiBold"/>
                        <Slider Minimum="0.01" Maximum="5.0" Value="{Binding SimplifyTolerance}" 
                                TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,5,0,12"/>

                        <TextBlock Text="{Binding SmoothLevel, StringFormat='边界平滑等级: {0}'}" FontWeight="SemiBold"/>
                        <Slider Minimum="0" Maximum="10" Value="{Binding SmoothLevel}" 
                                TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="3. 输出设置" Margin="0,0,0,15" Padding="8,10">
                    <StackPanel>
                        <TextBlock Text="生成目标图层:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding LayerName}" Height="28" 
                                 VerticalContentAlignment="Center" Padding="5,0" 
                                 Background="White" BorderBrush="#DDDDDD"/>
                    </StackPanel>
                </GroupBox>

                <Button Content="🚀 开始提取轮廓" Height="45" 
                        Background="#007ACC" Foreground="White" 
                        FontSize="14" FontWeight="Bold" 
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnExecute_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock Text="提示：选中线条后按回车执行" 
                           HorizontalAlignment="Center" Margin="0,10,0,0" 
                           Foreground="#999999" FontSize="11"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>