<UserControl x:Class="Plugin_ContourMaster.UI.ContourMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F3F3F3">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <StackPanel>
                <TextBlock Text="像素区域提取 (已优化纠偏)" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="{Binding SimplifyTolerance, StringFormat='补缝距离 (CAD单位): {0:F2}'}" FontWeight="SemiBold"/>
                <Slider Minimum="0.01" Maximum="5.0" Value="{Binding SimplifyTolerance}" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,5,0,15"/>

                <TextBlock Text="{Binding SmoothLevel, StringFormat='边界平滑等级: {0}'}" FontWeight="SemiBold"/>
                <Slider Minimum="0" Maximum="10" Value="{Binding SmoothLevel}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,15"/>

                <TextBlock Text="生成图层:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding LayerName}" Height="25" VerticalContentAlignment="Center" Margin="0,5,0,20"/>

                <Button Content="开始提取轮廓" Height="45" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnExecute_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>