<UserControl x:Class="Plugin_ContourMaster.UI.ContourMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plugin_ContourMaster.UI"
             xmlns:models="clr-namespace:Plugin_ContourMaster.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="300"
             Background="#F0F2F5">

    <UserControl.Resources>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <ObjectDataProvider x:Key="OcrEngineEnumValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:OcrEngineType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#444444"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#007ACC" Padding="15,12">
            <TextBlock Text="🎯 ContourMaster 智能轮廓提取" Foreground="White" FontSize="14" FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12,15,12,15">

                <GroupBox Header="1. 算法核心参数">
                    <StackPanel>
                        <DockPanel Margin="0,5">
                            <TextBlock Text="采样精度" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding PrecisionLevel}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="1" Maximum="10" Value="{Binding PrecisionLevel}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <TextBlock Text="识别阈值" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Threshold, StringFormat='\{0:F0\}'}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0" Maximum="255" Value="{Binding Threshold}" TickFrequency="5" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <TextBlock Text="补缝距离" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SimplifyTolerance, StringFormat='\{0:F2\}'}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0.01" Maximum="5.0" Value="{Binding SimplifyTolerance}" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>

                        <DockPanel Margin="0,5">
                            <TextBlock Text="平滑等级" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SmoothLevel}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0" Maximum="10" Value="{Binding SmoothLevel}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="2. 输出设置">
                    <DockPanel>
                        <TextBlock Text="生成图层:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding LayerName}" Height="24" VerticalContentAlignment="Center" Padding="5,0"/>
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="3. 识别模式配置" Background="#F9F9F9">
                    <StackPanel>
                        <UniformGrid Columns="2" Margin="0,5">
                            <RadioButton Content="线条提取" GroupName="MainMode" 
                                         IsChecked="{Binding IsOcrMode, Converter={StaticResource InverseBooleanConverter}}" />
                            <RadioButton Content="文字识别 (OCR)" GroupName="MainMode" 
                                         IsChecked="{Binding IsOcrMode}" />
                        </UniformGrid>

                        <StackPanel Visibility="{Binding IsOcrMode, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,10,0,0">
                            <Separator Margin="0,0,0,10"/>
                            <TextBlock Text="OCR 引擎选择" Style="{StaticResource LabelStyle}" FontSize="11"/>
                            <ComboBox SelectedItem="{Binding SelectedOcrEngine}" 
                                      ItemsSource="{Binding Source={StaticResource OcrEngineEnumValues}}" Height="26" Margin="0,0,0,8"/>

                            <StackPanel x:Name="BaiduConfigArea">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedOcrEngine}" Value="Baidu">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <CheckBox x:Name="ChkShowKeys" Content="显示明文 Key" FontSize="10" Margin="0,0,0,8" Foreground="#666666"/>

                                <TextBlock Text="Baidu API Key" FontSize="10" Foreground="#666666"/>
                                <Grid Margin="0,2,0,8">
                                    <TextBox Text="{Binding BaiduApiKey, UpdateSourceTrigger=PropertyChanged}" 
                                             Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <PasswordBox x:Name="PwdApiKey" PasswordChar="*" PasswordChanged="PwdApiKey_PasswordChanged"
                                                 Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </Grid>

                                <TextBlock Text="Baidu Secret Key" FontSize="10" Foreground="#666666"/>
                                <Grid Margin="0,2,0,0">
                                    <TextBox Text="{Binding BaiduSecretKey, UpdateSourceTrigger=PropertyChanged}" 
                                             Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <PasswordBox x:Name="PwdSecretKey" PasswordChar="*" PasswordChanged="PwdSecretKey_PasswordChanged"
                                                 Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Margin="0,10,0,0">
                    <Button Content="🖼️ 识别图像参照" Height="40" Click="BtnImage_Click" 
                            Background="#E3F2FD" BorderBrush="#BBDEFB" Margin="0,0,0,10"/>

                    <Button Content="🚀 开始矢量提取" Height="50" Click="BtnExecute_Click"
                            Background="#007ACC" Foreground="White" FontSize="15" FontWeight="Bold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Border Background="#EBEEF5" CornerRadius="4" Padding="10" Margin="0,15,0,5">
                        <StackPanel>
                            <TextBlock Text="💡 参数使用说明：" FontWeight="Bold" Foreground="#606266" Margin="0,0,0,5" FontSize="11"/>

                            <TextBlock Text="• 采样精度：控制转换图片的像素分辨率。数值越高，识别细小区域能力越强。" 
                                       Foreground="#666666" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>

                            <TextBlock Text="• 识别阈值：区分背景与线条。如果线条颜色较浅，请适当调低该数值。" 
                                       Foreground="#666666" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>

                            <TextBlock Text="• 补缝距离：自动连接断开线。数值越大，越能填补缺口，但细节会丢失。" 
                                       Foreground="#666666" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>

                            <TextBlock Text="• 平滑等级：控制顶点密度。数值越高点数越少，但重合度会略微下降。" 
                                       Foreground="#666666" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>

                            <TextBlock Text="• 图像模式提示：识别前需先点击“识别图像参照”。" 
                                       Foreground="#666666" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>