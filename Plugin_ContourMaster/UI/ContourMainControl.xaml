<UserControl x:Class="Plugin_ContourMaster.UI.ContourMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plugin_ContourMaster.UI"
             xmlns:models="clr-namespace:Plugin_ContourMaster.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="300"
             Background="#252526">
    <UserControl.Resources>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <ObjectDataProvider x:Key="OcrEngineEnumValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:OcrEngineType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#007ACC"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#434346"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Grid.Row="0" ContentSource="Header" RecognizesAccessKey="True" Margin="5,0,0,2"/>
                            <Border Grid.Row="1" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="2"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#007ACC"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#E1E1E1"/>
            <Setter Property="BorderBrush" Value="#434346"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Background="{TemplateBinding Background}" 
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          Foreground="{TemplateBinding Foreground}"
                                          Grid.ColumnSpan="2" Focusable="false" 
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border" CornerRadius="2" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <Path Name="Arrow" Fill="#AAA" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="8,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder" Background="#2D2D30" BorderThickness="1" BorderBrush="#434346" CornerRadius="2"/>
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E1E1E1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#434346"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#434346"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#E1E1E1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" Padding="15,10" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎯 轮廓图像识别" Foreground="#00A2ED" FontSize="14" FontWeight="Bold"/>

                    <Button x:Name="AboutBtn" Content="ⓘ" Click="BtnAbout_Click" 
                    FontSize="16" Margin="8,0,0,0" Background="Transparent" Foreground="#888" 
                    BorderBrush="Transparent" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" 
                Width="24" Height="24" Background="Transparent" Foreground="#666" 
                BorderBrush="Transparent" Click="BtnClose_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12,15,12,15">

                <GroupBox Header="1. 算法核心参数">
                    <StackPanel>
                        <DockPanel Margin="0,5">
                            <TextBlock Text="采样精度" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding PrecisionLevel}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="1" Maximum="10" Value="{Binding PrecisionLevel}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>
                        <DockPanel Margin="0,5">
                            <TextBlock Text="识别阈值" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Threshold, StringFormat='\{0:F0\}'}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0" Maximum="255" Value="{Binding Threshold}" TickFrequency="5" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>
                        <DockPanel Margin="0,5">
                            <TextBlock Text="补缝距离" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SimplifyTolerance, StringFormat='\{0:F2\}'}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0.01" Maximum="5.0" Value="{Binding SimplifyTolerance}" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>
                        <DockPanel Margin="0,5">
                            <TextBlock Text="平滑等级" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SmoothLevel}" Style="{StaticResource ValueStyle}" DockPanel.Dock="Right"/>
                            <Slider Minimum="0" Maximum="10" Value="{Binding SmoothLevel}" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="2. 输出设置">
                    <DockPanel>
                        <TextBlock Text="生成图层:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding LayerName}" Height="24"/>
                    </DockPanel>
                </GroupBox>

                <GroupBox Header="3. 识别模式配置">
                    <StackPanel>
                        <UniformGrid Columns="2" Margin="0,5">
                            <RadioButton Content="线条提取" GroupName="MainMode" 
                                         IsChecked="{Binding IsOcrMode, Converter={StaticResource InverseBooleanConverter}}" />
                            <RadioButton Content="文字识别 (OCR)" GroupName="MainMode" 
                                         IsChecked="{Binding IsOcrMode}" />
                        </UniformGrid>

                        <StackPanel Visibility="{Binding IsOcrMode, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,10,0,0">
                            <Separator Margin="0,0,0,10" Background="#3E3E42"/>
                            <TextBlock Text="OCR 引擎选择" Style="{StaticResource LabelStyle}" FontSize="11"/>
                            <ComboBox SelectedItem="{Binding SelectedOcrEngine}" 
                                      ItemsSource="{Binding Source={StaticResource OcrEngineEnumValues}}" Height="26" Margin="0,0,0,8"/>

                            <StackPanel x:Name="BaiduConfigArea">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedOcrEngine}" Value="Baidu">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <CheckBox x:Name="ChkShowKeys" Content="显示明文 Key" FontSize="10" Margin="0,0,0,8" Foreground="#AAAAAA"/>
                                <TextBlock Text="Baidu API Key" FontSize="10" Foreground="#666666"/>
                                <Grid Margin="0,2,0,8">
                                    <TextBox Text="{Binding BaiduApiKey, UpdateSourceTrigger=PropertyChanged}" 
                                             Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <PasswordBox x:Name="PwdApiKey" PasswordChar="*" PasswordChanged="PwdApiKey_PasswordChanged"
                                                 Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </Grid>
                                <TextBlock Text="Baidu Secret Key" FontSize="10" Foreground="#666666"/>
                                <Grid Margin="0,2,0,0">
                                    <TextBox Text="{Binding BaiduSecretKey, UpdateSourceTrigger=PropertyChanged}" 
                                             Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <PasswordBox x:Name="PwdSecretKey" PasswordChar="*" PasswordChanged="PwdSecretKey_PasswordChanged"
                                                 Visibility="{Binding IsChecked, ElementName=ChkShowKeys, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Margin="0,10,0,0">
                    <UniformGrid Columns="2" Margin="0,0,0,10">
                        <Button Content="🖼️ 图像识别" Height="45" Click="BtnImage_Click" 
                                Background="#3E3E42" Foreground="#E1E1E1" BorderThickness="0" Margin="0,0,5,0"/>
                        <Button Content="🚀 轮廓提取" Height="45" Click="BtnExecute_Click"
                                Background="#007ACC" Foreground="White" FontSize="14" FontWeight="Bold" BorderThickness="0" Margin="5,0,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </UniformGrid>

                    <Border Background="#2D2D30" BorderBrush="#434346" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,5,0,5">
                        <StackPanel>
                            <TextBlock Text="💡 参数使用说明：" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,5" FontSize="11"/>
                            <TextBlock Text="• 采样精度：控制转换图片的像素分辨率。数值越高，识别精细度越高。" Foreground="#999999" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• 识别阈值：背景深则调高，背景浅则调低。" Foreground="#999999" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• 补缝距离：自动填补缺口。数值越大，细节丢失越多。" Foreground="#999999" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• 平滑等级：控制顶点密度。数值越高点数越少。" Foreground="#999999" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• 百度OCR：该功能需自行申请百度通用文字识别（高精度含位置版）api，每月有免费的额度。" Foreground="#999999" FontSize="10" TextWrapping="Wrap" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>